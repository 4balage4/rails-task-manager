
<div class="container">
<h2><%= @task.id %></h2>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "update",
  edit_path(@task)
%>

<%= link_to "go back to index",
  tasks_path(@task) %>

</div>
