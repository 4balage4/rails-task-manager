
<div class="container">
<ul>
<% @tasks.each do |task| %>
<li><%= link_to("title: #{task.title}", task_path(task)) %>
<%= link_to "|| Delete ||",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "|| Update ||",  edit_path(task)
%></li>

<% end %>
</ul>


<%= link_to "create new task",
  tasks_new_path(@task) %>
</div>
